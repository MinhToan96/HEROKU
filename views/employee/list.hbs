<h3>
    <a href="/" class="btn btn-danger">
        <i class="fa fa-plus"> </i> Mới
    </a>
    NHẬP SÁCH MỚI VÀO CỬA HÀNG
</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên Sách</th>
            <th>NXB</th>
            <th>Tác Giả</th>
            <th>Số Lượng</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.nxb}}</td>
            <td>{{this.tacgia}}</td>
            <td>{{this.soluong}}</td>
            <td>
                <a href="/{{this._id}}">
                    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                </a>
                <a href="/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record?');">
                    <i class="fa fa-trash fa-lg" aria-hidden="true">

                    </i>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>