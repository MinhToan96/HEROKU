<h3>{{viewTitle}}</h3>
<form action="/" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Tên Sách</label>
        <input type="text" class="form-control" name="fullName" value="{{employee.fullName}}" placeholder="Tên Sách">
        <div class="text-danger">
            {{employee.fullNameError}}
        </div>
    </div>
    {{!-- <div class="form-group">
        <label>NXB</label>
        <input type="text" class="form-control" name="NXB" value="{{employee.nxb}}" placeholder="NXB">
        <div class="text-danger">
            {{employee.emailError}}
        </div>
    </div> --}}
    <div class="form-row">

        <div class="form-group md-6">
            <label>NXB</label>
            <input type="text" name="nxb" placeholder="NXB" value="{{employee.nxb}}" class="form-control">
        </div>
        <div class="form-group md-6">
            <label>Tác Giả</label>
            <input type="text" name="tacgia" placeholder="Tác giả" value="{{employee.tacgia}}" class="form-control">
        </div>
        <div class="form-group md-6">
            <label>Số Lượng</label>
            <input type="text" name="soluong" placeholder="Số lượng" value="{{employee.soluong}}" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Xác Nhận</button>
        <a href="/list" class="btn btn-danger">
            <i class="fa fa-list-alt"></i>Xem Tất Cả
        </a>
    </div>
</form>